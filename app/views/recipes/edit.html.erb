<h2>Edit Recipe</h2>

<%= simple_form_for @recipe, :html => { :multipart => true } do |f| %>
  <%= f.select :category_id, @categories %>
  <%= f.file_field :recipe_img %>
  <%= f.input :title, label: "Recipe Title" %>
  <%= f.input :description %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.button :submit %>
<% end %>